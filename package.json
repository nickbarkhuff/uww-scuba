{
	"private": true,
	"type": "module",
	"browserslist": [
		">0.25%",
		"last 2 versions",
		"not dead"
	],
	"scripts": {
		"dev": "npm run client:dev:serve & npm run server:dev:watch",
		"build": "npm run client:prod:build && npm run server:prod:build",
		"start": "node build/start.js",
		"client:dev:build": "webpack --config webpack/client-dev.cjs",
		"client:dev:watch": "webpack --watch --config webpack/client-dev.cjs",
		"client:dev:serve": "webpack serve --config webpack/client-dev.cjs",
		"client:prod:build": "webpack --config webpack/client-prod.cjs",
		"client:prod:watch": "webpack --watch --config webpack/client-prod.cjs",
		"client:prod:serve": "webpack serve --config webpack/client-prod.cjs",
		"server:dev:build": "webpack --config webpack/server-dev.cjs",
		"server:dev:watch": "webpack --watch --config webpack/server-dev.cjs",
		"server:prod:build": "webpack --config webpack/server-prod.cjs",
		"server:prod:watch": "webpack --watch --config webpack/server-prod.cjs"
	},
	"devDependencies": {
		"@babel/core": "^7.12.10",
